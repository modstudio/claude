{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Bash(claude mcp list-tools:*)",
      "Bash(~/.claude/lib/bin:*)",
      "Bash(docker compose:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run cancel:*)",
      "Bash(gh run list:*)",
      "Bash(gh run logs:*)",
      "Bash(gh run rerun:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git -C:*)",
      "Bash(git checkout:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git remote get-url:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(php -l:*)",
      "Bash(pwd:*)",
      "Bash(python3:*)",
      "Bash(tree:*)",
      "Bash(which:*)",
      "Bash(xargs:*)",
      "mcp__laravel-boost__*",
      "mcp__playwright__*",
      "mcp__youtrack__get_*",
      "mcp__youtrack__list_*",
      "mcp__youtrack__search_*",
      "Read(~/.claude/*)"
    ],
    "deny": [],
    "ask": [
      "Bash(git commit:*)",
      "Bash(git init:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(rm:*)"
    ]
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "php-lsp@claude-plugins-official": true
  }
}
